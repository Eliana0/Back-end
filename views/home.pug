        title Document
    body 
    h1="Ruta de productos"

ul

        each e in productos 

            if e.foto || e.nombre || e.precio

            <div class="container text-center">
                <div class="row">
                <div class="col">
                    p=e.nombre
                </div>
                <div class="col order-5">
                    img(src=`${e.foto}`, alt="", style: width="80px" )
                </div>
                <div class="col order-1">
                    p= e.precio
                </div>
                </div>
            </div>

        else
   
            p= "Por favor, rellene todos los campos"

